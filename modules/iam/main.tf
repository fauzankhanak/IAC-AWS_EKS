# Custom policy for EFS access (if needed)
resource "aws_iam_role_policy" "node_group_efs" {
  name = "${var.project_name}-${var.environment}-eks-node-efs-policy"
  role = aws_iam_role.node_group.id

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Action = [
          "elasticfilesystem:DescribeMountTargets",
          "elasticfilesystem:DescribeFileSystems",
          "ec2:DescribeAvailabilityZones"
        ]
        Resource = "*"
      }
    ]
  })
}

# Custom policy for Nexus registry access
resource "aws_iam_role_policy" "node_group_nexus" {
  name = "${var.project_name}-${var.environment}-eks-node-nexus-policy"
  role = aws_iam_role.node_group.id

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Action = [
          "secretsmanager:GetSecretValue",
          "secretsmanager:DescribeSecret"
        ]
        Resource = "*"
        Condition = {
          StringEquals = {
            "secretsmanager:ResourceTag/Registry" = "Nexus"
          }
        }
      }
    ]
  })
}

